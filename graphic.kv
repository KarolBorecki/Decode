<Widget>:
    font_name: "fonts/font.ttf"

<SquareButton>:
    size_hint_x: .12
    size_hint_y: None
    height: self.width

<BackButton@SquareButton>:
    pos_hint: {'x': 0, 'top': 1}
    source: "img/home.png"

    on_release: root.parent.parent.manager.current = 'menu'

<MenuScreen>:
    FloatLayout:
        BoxLayout:
            size_hint: (.5, .2)
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'top': .95}

            Image:
                source: "img/trophy.png"

            Label:
                text: str(root.high_score)
                font_size: root.height/15

        Label:
            text: "[b]Decode![/b]"
            pos_hint: {'center_x': .5, 'center_y': .6}

            font_size: root.height/10
            halign: 'center'
            markup: True

        Button:
            text: 'Play'
            size_hint: (.5, .15)
            pos_hint: {'center_x': .5, 'center_y': .3}

            background_color: .3, .5, 1, .9
            font_size: root.height/15

            on_release: root.manager.current = 'play'

        SquareButton:
            pos_hint: {'x': 0, 'top': 1}
            source: "img/theme.png"

        Button:
            pos_hint: {'x': 0, 'top': 1}
            size_hint_x: .12
            size_hint_y: None
            height: self.width
            background_normal: "img/na.png"
            background_down: "img/na.png"
            on_release: root.change_theme()

        SquareButton:
            pos_hint: {'right': 1, 'top': 1}
            source: "img/settings.png"

            on_release: root.manager.current = 'settings'

        SquareButton:
            pos_hint: {'right': 1, 'y': 0}
            source: "img/info.png"

            on_release: root.manager.current = 'info'

<PlayScreen>:
    board: board
    score_board: score_board
    bomb_label: bomb_label

    FloatLayout:
        BackButton:
            id: back

        Label:
            id: score_board
            text: str(root.score)
            pos_hint: {'center_x': .5, 'center_y': .95}
            font_size: root.height/15

        GridLayout:
            id: board
            pos_hint: {'center_x': .5, 'center_y': .55}
            size_hint_x: .85
            size_hint_y: None
            height: self.width
            spacing: 5
            cols: root.board_size

        SquareButton:
            size_hint_x: None
            size_hint_y: .15
            pos_hint: {'center_x': .5, 'top': .15}
            source: "img/bomb.png"
            on_press: root.bomb_drag()

        Label:
            id: bomb_label
            text: str(root.bombs_count)
            pos_hint: {'center_x': .55, 'center_y': .05}
            font_size: self.height/20

<SettingsScreen>:
    FloatLayout:
        Label:
            text: 'SETTINGS COMING SOON!!!\nOR NEVER...'
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size: 20
            halign: 'center'

        BackButton:
            id: back

<InfoScreen>:
    FloatLayout:
        Label:
            text: 'INFO'
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size: 20
            halign: 'center'

        BackButton:
            id: back