#:import Window kivy.core.window.Window

<Widget>:
    font_name: "fonts/font.ttf"

<GameOverScreen>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: (1, 1)

    canvas:
        Color:
            rgba: 0, 0, 0, .2

        Rectangle:
            size: root.size

    Image:
        pos_hint: {'center_x': .5, 'center_y': .5}
        source: "img/game_over.png"

    Label:
        pos_hint: {'center_x': .5, 'center_y': .2}
        text: "Tap to try again"
        font_size: self.height * 0.05

<SquareButton>:
    size_hint_x: .12
    size_hint_y: None
    height: self.width

<BackButton@SquareButton>:
    pos_hint: {'x': 0, 'top': 1}
    source: "img/home.png"

    on_release: root.parent.parent.manager.current = 'menu'

<MenuScreen>:
    high_score_label: high_score_label
    FloatLayout:
        BoxLayout:
            size_hint: (.5, .2)
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'top': .65}

            Image:
                source: "img/trophy.png"

            Label:
                id: high_score_label
                text: str(root.high_score)
                font_size: root.height/15

        Label:
            text: "[b]Decode![/b]"
            pos_hint: {'center_x': .5, 'center_y': .85}

            font_name: "fonts/title_font.ttf"
            font_size: root.height/10
            halign: 'center'
            markup: True

        Button:
            text: 'Play'
            size_hint: (.5, .15)
            pos_hint: {'center_x': .5, 'center_y': .3}

            background_color: .3, .5, 1, .9
            font_size: root.height/15

            on_release: root.manager.current = 'play'

        SquareButton:
            pos_hint: {'x': 0, 'top': 1}
            source: "img/theme.png"

        Button:
            pos_hint: {'x': 0, 'top': 1}
            size_hint_x: .12
            size_hint_y: None
            height: self.width
            background_normal: "img/na.png"
            background_down: "img/na.png"
            on_release: root.change_theme()

        SquareButton:
            pos_hint: {'right': 1, 'top': 1}
            source: "img/settings.png"

            on_release: root.manager.current = 'settings'

        SquareButton:
            pos_hint: {'x': 0, 'y': 0}
            source: "img/info.png"

            on_release: root.manager.current = 'info'

<PlayScreen>:
    board: board
    score_board: score_board
    bomb_label: bomb_label
    bomb: bomb

    FloatLayout:
        BackButton:
            id: back

        Label:
            id: score_board
            text: str(root.score)
            pos_hint: {'center_x': .5, 'center_y': .95}
            font_size: root.height/15

        GridLayout:
            id: board
            pos_hint: {'center_x': .5, 'center_y': .55}
            size_hint_x: .9
            size_hint_y: None
            height: self.width
            spacing: 2
            cols: root.board_size

        SquareButton:
            id: bomb
            size_hint_x: .22
            pos_hint: {'center_x': .5, 'top': .15}
            source: "img/bomb.png"
            on_press: root.bomb_drag()

        Label:
            id: bomb_label
            text: str(root.bombs_count)
            pos_hint: {'center_x': .55, 'center_y': .05}
            font_size: self.height/20

<SettingsScreen>:
    board_size_grid: board_size_grid
    colors_count_grid: colors_count_grid
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .25
            pos_hint: {'center_x': .5, 'center_y': .85}

            Label:

                text: "Board size:"
                font_size: 20

            GridLayout:
                id: board_size_grid
                pos_hint: {'center_x': .5}
                size_hint_x: .85
                size_hint_y: None
                spacing: 5
                row_default_height: self.width/len(root.board_size_options)
                row_force_default: True
                cols: len(root.board_size_options)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .25
            pos_hint: {'center_x': .5, 'center_y': .65}

            Label:
                pos_hint: {'center_x': .5, 'center_y': .7}
                text: "Colors:"
                font_size: 20

            GridLayout:
                id: colors_count_grid
                pos_hint: {'center_x': .5, 'center_y': .57}
                size_hint_x: .85
                size_hint_y: None
                spacing: 5
                row_default_height: self.width/len(root.colors_count_options)
                row_force_default: True
                cols: len(root.colors_count_options)

        Label:
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: "Change of game settings may cause lags \n score will not be saved!"
            halign: 'center'
            font_size: 15

        Label:
            pos_hint: {'center_x': .5, 'center_y': .35}
            text: "Find me on media!"
            font_size: 40

        Image:
            size_hint_y: .07
            pos_hint: {'center_x': .25, 'center_y': .2}
            source: "img/facebook.png"

        Image:
            size_hint_y: .07
            pos_hint: {'center_x': .25, 'center_y': .1}
            source: "img/github.png"

        Label:
            pos_hint: {'center_x': .65, 'center_y': .2}
            text: "/Karol.Borecki.op"
            font_size: 20

        Label:
            pos_hint: {'center_x': .65, 'center_y': .1}
            text: "/KarolBorecki"
            font_size: 20

        BackButton:
            id: back

<InfoScreen>:
    FloatLayout:
        Image:
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            source: "img/info_how_to_play.png"

        BackButton:
            id: back